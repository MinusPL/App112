<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App112.Pages.LocationPage"
             Title="Miejsce zdarzenia">
  <ScrollView>
      <StackLayout Padding="10">
      <Label Text="Nie udało się ustalić pozycji przy użyciu systemu GPS. Proismy zatem o uzupełnienie informacji o miejscu zdarzenia."/>
            <Editor x:Name="editLoc" VerticalOptions="FillAndExpand"/>
            <Button Text="Dalej"
						Clicked="BtnLocationSend"
						BackgroundColor="{StaticResource Primary}"
						TextColor="White"/>
        </StackLayout>
  </ScrollView>
</ContentPage>